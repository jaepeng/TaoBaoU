<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ChangePswActivity">


    <LinearLayout
        android:id="@+id/ll_top_bar"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="账号登录"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_old_pwd"
        app:layout_constraintTop_toBottomOf="@+id/ll_top_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码:"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/edt_login_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:inputType="numberPassword"
            android:id="@+id/edt_old_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_new_pwd"
        app:layout_constraintTop_toBottomOf="@+id/ll_old_pwd"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_newPw_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/edt_login_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:inputType="numberPassword"
            android:id="@+id/edt_change_pwd_new_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_new_pwd_repeat"
        app:layout_constraintTop_toBottomOf="@+id/ll_new_pwd"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/edt_login_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:inputType="numberPassword"
            android:id="@+id/edt_change_psd_repate_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入新密码"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView1"
            app:layout_constraintTop_toTopOf="@+id/textView1" />
    </LinearLayout>
    <Button
        app:layout_constraintTop_toBottomOf="@+id/ll_new_pwd_repeat"
        android:id="@+id/btn_chang_psw_act_change"
        android:text="确认修改"
        android:textSize="18sp"
        android:background="@drawable/bg_my_info_btn_login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>